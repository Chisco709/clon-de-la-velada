---
import AnimatedX from "@/components/AnimatedX.astro"
import HeroLogo from "@/components/HeroLogo.astro"
---

<section class="flex flex-col place-items-center gap-4 lg:gap-9">
	<h1 class="sr-only bg-black/30">Presentación de la Velada del Año IV</h1>
	<a
		class="underline-animation -rotate-6 font-atomic text-2xl text-white transition hover:scale-110 md:text-4xl"
		href="https://www.twitch.tv/ibai"
		target="_blank"
		rel="noopener"
		title="Enlace al canal de Twitch de Ibai Llanos"
		aria-label="Enlace al canal de Twitch de Ibai Llanos"
	>
		<span class="relative">twitch.tv/ibai</span>
	</a>
	<div class="relative">
		<AnimatedX />
		<div
			class="absolute inset-0 -z-10 m-auto w-full rounded-full bg-black opacity-70 blur-2xl md:size-[400px]"
		>
		</div>
		<HeroLogo class="h-auto w-[250px] overflow-visible md:w-[500px]" />
	</div>
</section>
