---
import LiteYouTube from "@/components/LiteYouTube.astro"
import SectionTitle from "@/components/SectionTitle.astro"
---

<section class="my-40 px-2 md:my-80">
	<SectionTitle
		title="Presentación"
		description="Vuelve a ver la presentación desde el Teatro Victoria"
		variant="small"
	/>

	<div class="relative mt-8">
		<img
			aria-hidden="true"
			class="absolute inset-0 -z-10 m-auto scale-125 select-none"
			src="/img/drawn-x-logo.webp"
			alt="Logo X de La Velada dibujado a mano"
		/>

		<LiteYouTube videoId="ct0Hr6zYZGU" backgroundImage="/img/video-presentation-cover.webp" />
	</div>
</section>
