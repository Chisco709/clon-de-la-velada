<style>
	@keyframes sprite {
		25% {
			background-position: 100% 0;
		}
		25.1% {
			background-position: 0 33%;
		}
		50% {
			background-position: 100% 33%;
		}
		50.1% {
			background-position: 0 66%;
		}
		100% {
			background-position: 100% 66%;
		}
	}
</style>

<script>
	
	window.addEventListener("click", (ev) => {
		const sound = new Audio("/hit.wav");
		const { clientX: mouseX , clientY: mouseY } = ev;
		const sprite = document.createElement("span");
		const spriteCenter = 150 / 2;

		sprite.style.cssText = /* css */`
			position: fixed;
			top: ${mouseY - spriteCenter}px;
			left: ${mouseX - spriteCenter}px;
			width: 150px;
			height: 150px;
			display: inline-block;
			background-image: url("/hit-sprite.png");
			background-repeat: no-repeat;
			background-position: 0 0;
			animation: sprite 500ms steps(3);
			z-index: 999;
			pointer-events: none;
		`;
		
		sound.play();
		document.body.appendChild(sprite);
		setTimeout(() => document.body.removeChild(sprite), 500);
	});
</script>